<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="GUI.MainWindow"
        Title="Люблю ХОЛСИМ"
        Width="400"
        Height="500"
        MinWidth="400"
        MinHeight="500"
        MaxWidth="400"
        MaxHeight="500">


<StackPanel Background="#484848">
    <Grid Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
             <RowDefinition Height="1*"/>
             <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Разраб" />
                <ComboBox Grid.Column="1" x:Name="name1" Width="200">
                    <ComboBoxItem>Жуков</ComboBoxItem>
                    <ComboBoxItem>Фадеев</ComboBoxItem>
                    <ComboBoxItem>Пащенко</ComboBoxItem>
                    <ComboBoxItem>Харланов</ComboBoxItem>
                    <ComboBoxItem>Шурпач</ComboBoxItem>
                    </ComboBox>
            </Grid>
                <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Проверил" />
                <ComboBox Grid.Column="1" x:Name="name2" Width="200">
                    <ComboBoxItem>Жуков</ComboBoxItem>
                    <ComboBoxItem>Фадеев</ComboBoxItem>
                    <ComboBoxItem>Пащенко</ComboBoxItem>
                    <ComboBoxItem>Харланов</ComboBoxItem>
                    <ComboBoxItem>Шурпач</ComboBoxItem>
                    </ComboBox>
            </Grid>
                <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Н. контр" />
                <ComboBox Grid.Column="1" x:Name="name3" Width="200">
                    <ComboBoxItem>Жуков</ComboBoxItem>
                    <ComboBoxItem>Фадеев</ComboBoxItem>
                    <ComboBoxItem>Пащенко</ComboBoxItem>
                    <ComboBoxItem>Харланов</ComboBoxItem>
                    <ComboBoxItem>Шурпач</ComboBoxItem>
                    </ComboBox>
            </Grid>
            <CheckBox HorizontalAlignment="Center" Grid.Row="3" x:Name="add_stamp" Content="Добавить штамп" Margin="10"/>
            <Grid Grid.Row="4" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <RadioButton GroupName="Target" Tag="VOL" Content="VOL" IsChecked="True" Checked="RadioButton_Checked" Grid.Column="0" />
                <RadioButton GroupName="Target" Tag="SHU" Content="SHU" Checked="RadioButton_Checked" Grid.Column="1" />
                <RadioButton GroupName="Target" Tag="QAR" Content="QAR" Checked="RadioButton_Checked" Grid.Column="2" />
                <CheckBox x:Name="auto_place" Content="Beta" Grid.Column="3"/>
            </Grid>
            <CheckBox HorizontalAlignment="Center" Grid.Row="5" x:Name="sign_stamp" Content="Подписать" IsChecked="False" Margin="10"></CheckBox>
            <CheckBox HorizontalAlignment="Center" Grid.Row="6" x:Name="saved_pdf" Content="Сохранить pdf" IsChecked="True" Margin="10"></CheckBox>
            <Button HorizontalAlignment="Center" Grid.Row="7" x:Name="button_run" Content="Холсим ❤" Click="Button_Click" Margin="10" Background="#33acca"></Button>
            <ProgressBar Grid.Row="8" x:Name="progressBar" Minimum="0" Maximum="100" Height="8" Foreground="#33acca"/>
            <!-- <Button Grid.Row="9" x:Name="button_test" Content="test" Click="Test_button_click"/> -->

    </Grid>
</StackPanel>
</Window>
